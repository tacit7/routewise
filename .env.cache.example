# Google API Cache Configuration for Development

# Cache durations (in minutes)
# Development tip: Set these high during development to minimize API calls
GOOGLE_PLACES_CACHE_DURATION=50        # Default: 5 (50 minutes in dev vs 5 in prod)
GOOGLE_GEOCODING_CACHE_DURATION=100    # Default: 10 (100 minutes in dev vs 10 in prod)
GOOGLE_DIRECTIONS_CACHE_DURATION=240   # Default: 30 (240 minutes = 4 hours in dev)
GOOGLE_STATIC_CACHE_DURATION=1440      # Default: 60 (1440 minutes = 24 hours)

# Cache strategy settings
CACHE_STRATEGY=development              # Options: development, production, aggressive
CACHE_DEBUG=true                        # Enable cache hit/miss logging
CACHE_WARMUP_ON_START=true             # Pre-warm cache with common routes

# Development-specific cache settings
DEV_CACHE_MULTIPLIER=10                 # Multiply all cache durations by this in dev
DEV_EXTEND_STATIC_CACHE=true           # Use very long cache for static content in dev
DEV_AGGRESSIVE_CACHING=true            # Enable aggressive caching strategies

# Common development routes for cache warming
# Format: "start,end" separated by semicolons
DEV_WARMUP_ROUTES="Austin,Dallas;Houston,San Antonio;Los Angeles,San Francisco;Seattle,Portland"

# Redis cache settings (optional - falls back to in-memory)
REDIS_CACHE_URL=redis://localhost:6379
REDIS_CACHE_DB=1                       # Use separate DB for cache
REDIS_CACHE_KEY_PREFIX=routewise:dev:   # Prefix for development

# API quota management (to avoid hitting limits during development)
GOOGLE_API_QUOTA_TRACKING=true         # Track API usage
GOOGLE_API_DAILY_LIMIT=25000           # Daily request limit
GOOGLE_API_CACHE_PRIORITY=true         # Prioritize cache hits over fresh data in dev